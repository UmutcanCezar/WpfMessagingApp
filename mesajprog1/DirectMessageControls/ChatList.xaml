<UserControl x:Class="mesajprog1.DirectMessageControls.ChatList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mesajprog1.DirectMessageControls" 
             xmlns:viewmodels="clr-namespace:mesajprog1.ViewModel"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:mesajprog1.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodels:FriendsViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <DataTemplate x:Key="ChatButtonItemTemplate">
            <RadioButton GroupName="ChatButton"
             Command="{Binding DataContext.SelectFriendCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
             CommandParameter="{Binding}">
                <i:Interaction.Behaviors>
                    <behaviors:MouseEnterBehavior Command="{Binding DataContext.HoverFriendCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                CommandParameter="{Binding}" />
                </i:Interaction.Behaviors>
                <RadioButton.Style>

                    <Style TargetType="{x:Type ToggleButton}">
                        <Style.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#FFDDDDDD"/>
                            </Trigger>
                        </Style.Triggers>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Setter Property="MinHeight" Value="80"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <!--<Setter Property="IsChecked" Value="{Binding ChatIsSelected, Mode=TwoWay ,UpdateSourceTrigger=PropertyChanged}"/>
                        -->
                        <Setter Property="Template" >
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ToggleButton}">
                                    <Border 
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="20"
                                        Padding="{TemplateBinding Padding}"
                                        SnapsToDevicePixels="True"
                                        x:Name="Border">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Ellipse Width="50" Height="50">
                                                    <Ellipse.Fill>
                                                        <ImageBrush Stretch="UniformToFill"
                                                                    ImageSource="{Binding ProfilePictureUrl,Converter={StaticResource UrlToImageSourceConverter}}"/>


                                                    </Ellipse.Fill>
                                                </Ellipse>

                                                <Grid Grid.Column="1"
                                                      Margin="20,0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <TextBlock Text="{Binding Username}"
                                                               FontSize="15">
                                                        <TextBlock.Style>
                                                            <Style TargetType="{x:Type TextBlock}">
                                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                                <Style.Triggers >
                                                                    <DataTrigger Binding="{Binding IsMouseOver,RelativeSource={RelativeSource AncestorType={x:Type ToggleButton}}}" Value="True">
                                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>

                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <TextBlock Text="{Binding LastMessage}"
                                                               Grid.Row="1"
                                                               TextTrimming="CharacterEllipsis"
                                                               TextWrapping="NoWrap"
                                                               MaxWidth="200"
                                                                Visibility="{Binding Source={StaticResource FriendState},
                                                                Path=AddOrChat, 
                                                                Converter={StaticResource ChatToVisibilityConverter},
                                                                ConverterParameter=0}"
                                                               >

                                                        <TextBlock.Style>
                                                            <Style TargetType="{x:Type TextBlock}">
                                                                <Setter Property="FontWeight" Value="Normal"/>
                                                                <Style.Triggers >
                                                                    <DataTrigger Binding="{Binding IsMouseOver,RelativeSource={RelativeSource AncestorType={x:Type ToggleButton}}}" Value="True">
                                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>

                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>


                                                </Grid>


                                                <Separator 
                                                       Grid.Column="1"
                                                       Grid.ColumnSpan="2" 
                                                       VerticalAlignment="Bottom"
                                                       BorderThickness=".5"
                                                       BorderBrush="#9c9c9c"/>



                                            </Grid>


                                            <Grid 
                                                Height="auto"
                                                Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40"/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <Grid Grid.Column="1" Visibility="{Binding Source={StaticResource FriendState},
                                                                Path=AddOrChat, 
                                                                Converter={StaticResource ChatToVisibilityConverter},
                                                                ConverterParameter=1}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Button Content="{StaticResource addSign}" Style="{StaticResource IconButtonStyle}" Grid.Column="3" 
                                                            Command="{Binding DataContext.SendRequestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding FriendId}"/>
                                                </Grid>

                                                <Grid Grid.Column="1" Visibility="{Binding Source={StaticResource FriendState},
                                                                Path=AddOrChat, 
                                                                Converter={StaticResource ChatToVisibilityConverter},
                                                                ConverterParameter=2}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Button Content="{StaticResource addSign}" Style="{StaticResource IconButtonStyle}" Grid.Column="2"
                                                            Command="{Binding DataContext.AcceptRequestCommand,RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding RequestId}"/>
                                                    <Button Content="{StaticResource close}" Style="{StaticResource IconButtonStyle}" Foreground="red" Grid.Column="3" 
                                                            Command="{Binding DataContext.RejectRequestCommand,RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding RequestId}"/>
                                                </Grid>




                                            </Grid>

                                        </Grid>

                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>



                    </Style>
                </RadioButton.Style>
            </RadioButton>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="25,15">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" >

                            <Path Data="{StaticResource allchats}" Fill="Black" Grid.Column="0"/>
                            <TextBlock
                                    
                                    Margin="10,0"
                                    FontWeight="SemiBold"
                                    VerticalAlignment="Center">
                                    <Hyperlink Command="{Binding ChatListCommand}">
                                        <Hyperlink.Style>
                                            <Style TargetType="Hyperlink">
                                                        <Setter Property="Foreground" Value="Black"/>
                                                         <Setter Property="TextDecorations" Value="{x:Null}"/>
                                                         <Setter Property="Cursor" Value="Hand"/>
                                            </Style>
                                        </Hyperlink.Style>
                                    All Chats</Hyperlink>
                                
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Column="1">

                            <Path Data="{StaticResource addSign}" Fill="Black"/>
                            <TextBlock 
                                    Margin="10,0"
                                    FontWeight="SemiBold"
                                    VerticalAlignment="Center">
                                
                                <Hyperlink Command="{Binding AddCommand}">
                                            <Hyperlink.Style>
                                                 <Style TargetType="Hyperlink">
                                                        <Setter Property="Foreground" Value="Black"/>
                                                         <Setter Property="TextDecorations" Value="{x:Null}"/>
                                                         <Setter Property="Cursor" Value="Hand"/>
                                                 </Style>
                                            </Hyperlink.Style>
                                    
                                    Add Friend</Hyperlink>
                            </TextBlock>

                            <Path Data="{StaticResource contact}" Fill="Black"/>
                            <TextBlock 
                                    Margin="10,0"
                                    FontWeight="SemiBold"
                                    VerticalAlignment="Center">
                                
                                <Hyperlink Command="{Binding RequestsCommand}">
                                            <Hyperlink.Style>
                                                 <Style TargetType="Hyperlink">
                                                        <Setter Property="Foreground" Value="Black"/>
                                                         <Setter Property="TextDecorations" Value="{x:Null}"/>
                                                         <Setter Property="Cursor" Value="Hand"/>
                                                 </Style>
                                            </Hyperlink.Style>
                                    
                                    Friend Requests</Hyperlink>
                            </TextBlock>

                        </StackPanel>
                    </Grid>
                </StackPanel>
                <ItemsControl ItemTemplate="{StaticResource ChatButtonItemTemplate}" Padding="0,15">
                    <ItemsControl.Style>
                        <Style TargetType="ItemsControl">
                            <Setter Property="ItemsSource" Value="{Binding FriendsView}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Source={StaticResource FriendState}, Path=AddOrChat}" Value="2">
                                    <Setter Property="ItemsSource" Value="{Binding Requests}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.Style>
                </ItemsControl>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>

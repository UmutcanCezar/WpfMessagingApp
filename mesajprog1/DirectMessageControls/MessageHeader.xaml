<UserControl x:Class="mesajprog1.DirectMessageControls.MessageHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mesajprog1.DirectMessageControls" xmlns:ViewModel="clr-namespace:mesajprog1.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <ViewModel:MessageHeaderViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style x:Key="ContactInfoButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <ControlTemplate x:Key="ContactInfoButtonTemplate" TargetType="Button">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Ellipse 
                    Height="40"
                    Width="40">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding ProfilePictureUrl,Converter={StaticResource UrlToImageSourceConverter},UpdateSourceTrigger=PropertyChanged}"  Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>
                <Grid Grid.Column="1">
                    <TextBlock FontWeight="Bold" FontSize="20" Text="{Binding Username,UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </Grid>
        </ControlTemplate>
    </UserControl.Resources>
    <Grid Height="75" VerticalAlignment="Center" Margin="0,0,15,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Button Template="{StaticResource ContactInfoButtonTemplate}" Style="{StaticResource ContactInfoButtonStyle}"/>
        <Button Grid.Column="1" Style="{StaticResource IconButtonStyle}" Content="{StaticResource videocall}"/>
        <Button Grid.Column="2" Style="{StaticResource IconButtonStyle}" Content="{StaticResource call}"/>
        <Button Grid.Column="3" Style="{StaticResource IconButtonStyle}" Content="{StaticResource search}"/>
        <ToggleButton    Grid.Column="4"
                         Content="{StaticResource more}"
                         Style="{StaticResource ToggleIconButtonStyle}"/>
    </Grid>
</UserControl>
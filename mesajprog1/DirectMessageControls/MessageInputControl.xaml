<UserControl x:Class="mesajprog1.DirectMessageControls.MessageInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mesajprog1.DirectMessageControls" xmlns:ViewModel="clr-namespace:mesajprog1.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <ViewModel:TextBoxViewModel/>
    </UserControl.DataContext>
    <Border Background="#dce1de"
        CornerRadius="15"
        Height="50"
        Margin="15,8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBox 
            Background="Transparent"
            BorderThickness="0"
            Padding="12,0"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            Text="{Binding MessageText,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
            x:Name="MessageBox">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding MessageSendCommand}"/>
                </TextBox.InputBindings>

            </TextBox>
            <StackPanel Grid.Column="1"
                    Orientation="Horizontal">
                <Button Content="{StaticResource attach}"
                    x:Name="Attachbutton"
                    Style="{StaticResource IconButtonStyle}"
                    />
                <Button Content="{StaticResource send}"
                    x:Name="SendMessageButton"
                    Command="{Binding MessageSendCommand}"
                    Style="{StaticResource IconButtonStyle}"
                    />
            </StackPanel>


        </Grid>

    </Border>
</UserControl>

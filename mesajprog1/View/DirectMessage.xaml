    <UserControl x:Class="mesajprog1.View.DirectMessage"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                 xmlns:local="clr-namespace:mesajprog1.View"
                 xmlns:DirectMessageControls="clr-namespace:mesajprog1.DirectMessageControls"
                 xmlns:app="clr-namespace:mesajprog1"
                 mc:Ignorable="d" 
            Background="Transparent"
            FontSize="15"
    d:DesignHeight="768" d:DesignWidth="1250"
             >
        <Border 
                Background="WhiteSmoke"
                >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <!--title bar-->

                <Grid Grid.Row="1" MinWidth="406">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid Height="75"
                          Margin="15,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="40"/>

                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Chats"
                               
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="SemiBold"/>

                        <Button x:Name="btnChatSearchButton"
                                Grid.Column="2"
                                Content="{StaticResource search}"
                                Style="{StaticResource IconButtonStyle}"/>

                        <ToggleButton x:Name="btnMoreOptions"
                                      Grid.Column="3"
                                      Content="{StaticResource more}"
                                      Style="{StaticResource ToggleIconButtonStyle}"/>
                    </Grid>
                    <Border CornerRadius="15"
                            Background="#dce1de"
                            Grid.Row="1"
                            Margin="20"
                            Height="50"
                            x:Name="SearchBoxBorder"
                            FocusManager.FocusedElement="{Binding ElementName=SearchQuery}">
                        <TextBox Name="SearchQuery"
                                 Padding="12,0"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Text="SearchText"
                                 VerticalAlignment="Stretch"
                                 VerticalContentAlignment="Center"
                                 />

                    </Border>
                    <!--<CustomControls:StatusThumbs Grid.Row="2"/>-->
                    <DirectMessageControls:ChatList Grid.Row="3"/>
                
                </Grid>

                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="15"/>
                    </Grid.RowDefinitions>

                <DirectMessageControls:MessageHeader Grid.Row="0" />
                <DirectMessageControls:ChatConversation Grid.Row="1" />
                <DirectMessageControls:MessageInputControl Grid.Row="2"/>


                </Grid>

            </Grid>

        </Border>
    </UserControl>

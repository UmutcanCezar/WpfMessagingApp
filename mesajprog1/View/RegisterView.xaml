<UserControl x:Class="mesajprog1.View.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mesajprog1.View"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1250">
    <Border>

        <Border.Background>
            <LinearGradientBrush>
                <GradientStop Color="#a9a9a9" Offset="0"/>
                <GradientStop Color="#ffffff" Offset="0.75"/>

            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="500"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>







            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                    <TextBlock Text="Username:" />
                    <TextBox Width="250" HorizontalAlignment="Left" Padding="2" Text="{Binding Username,UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="Email:"/>
                    <TextBox Width="250" HorizontalAlignment="Left" Padding="2" Text="{Binding Email,UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="Password:"/>
                    <TextBox Width="250" HorizontalAlignment="Left" Padding="2" Text="{Binding Password,UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="Reset Password:"/>
                    <TextBox Width="250" HorizontalAlignment="Left" Padding="2" Text="{Binding ResetPassword,UpdateSourceTrigger=PropertyChanged}"/>

                </StackPanel>
                <Grid Grid.Row="2" Height="25" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="Register" Width="120" HorizontalAlignment="Right" Command="{Binding RegisterCommand}"/>
                    <Button Grid.Column="2" Content="Back" Width="120" HorizontalAlignment="left" Command="{Binding BackToLoginCommand}"/>

                </Grid>
            </Grid>
        </Grid>


    </Border>
</UserControl>
